<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_empty_home_notice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_home_notice_empty"
        android:paddingHorizontal="22.5dp"
        android:paddingVertical="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_empty_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_empty_notice" />

        <TextView
            android:id="@+id/textView_empty_notice_description"
            style="@style/Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="등록된 공지사항이 없어요"
            android:textAlignment="center"
            android:textColor="@color/black_50"
            app:layout_constraintEnd_toEndOf="@+id/imageView_empty_notice"
            app:layout_constraintStart_toStartOf="@+id/imageView_empty_notice"
            app:layout_constraintTop_toBottomOf="@+id/imageView_empty_notice" />

        <TextView
            android:id="@+id/textView_empty_notice_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="학생회에서 공지를 등록할 때까지 조금만 기다려주세요."
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/textView_empty_notice_description"
            app:layout_constraintStart_toStartOf="@+id/textView_empty_notice_description"
            app:layout_constraintTop_toBottomOf="@+id/textView_empty_notice_description" />

        <Button
            android:id="@+id/button_register_student_council"
            style="@style/Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="59dp"
            android:paddingVertical="3dp"
            android:text="학생회 등록하기"
            android:textColor="@color/white"
            android:visibility="gone"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="@+id/textView_empty_notice_description2"
            app:layout_constraintStart_toStartOf="@+id/textView_empty_notice_description2"
            app:layout_constraintTop_toBottomOf="@+id/textView_empty_notice_description2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>