<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Studing" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary_50</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowBackground">@color/black_5</item>
        <item name="colorControlActivated">@color/primary_50</item> <!-- 커서 색상 -->
        <item name="android:windowLightStatusBar">true
        </item>   <!-- 상태바 아이콘(true: 검정 / false: 흰색) -->
        <item name="android:navigationBarColor">#B3FFFFFF</item> <!-- 하단 탐색바 배경 -->
    </style>

    <style name="Theme.Studing" parent="Base.Theme.Studing" />

    <style name="PopupStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:popupBackground">@drawable/background_popup_menu</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:overlapAnchor">false</item>
        <!--        <item name="android:popupElevation">5dp</item>-->
        <!--        <item name="elevationOverlayAccentColor">#1AABABAB</item>-->
        <!--        <item name="android:shadowColor">#1AABABAB</item>-->
        <!--        <item name="android:shadowDx">0</item>-->
        <!--        <item name="android:shadowDy">20</item>-->
        <!--        <item name="android:shadowRadius">20</item>-->
        <item name="android:outlineProvider">background</item>
    </style>

    <style name="Theme.Shadows" parent="Base.Theme.Studing">
        <item name="android:ambientShadowAlpha">0.02</item>
        <item name="android:spotShadowAlpha">0.03</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/StudingBottomSheet</item>
    </style>

    <style name="StudingBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">11dp</item>
    </style>
</resources>